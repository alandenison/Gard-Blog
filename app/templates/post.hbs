
  <section class="main-content">
    <h1>{{model.title}}</h1>
    <img src="{{model.image}}" alt="" />
    <p>{{model.author}}</p>
    <p>{{model.date}}</p>
    <p>{{model.category}}</p>
    <p>{{model.story}}</p>
