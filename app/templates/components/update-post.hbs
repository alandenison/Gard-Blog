{{#if updatePost}}
  <div>
    <form>
      <div class="form-group">
        <label for="image">Image</label>
        {{input value=image id="image" placeholder=post.image}}
      </div>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=post.title}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=post.author}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date" placeholder=post.date}}
      </div>

      <div class="form-group">
        <label for="category">Category</label>
        {{input value=category id="category" placeholder=post.category}}
      </div>

      <div class="form-group">
        <label for="story">Story</label>
        {{textarea value=story id="story" placeholder=post.story}}
      </div>

      <button {{action 'save1'}}>Save</button>
    </form>
  </div>
{{else}}
<button {{action 'postForm'}}>Show Post Form</button>
{{/if}}
